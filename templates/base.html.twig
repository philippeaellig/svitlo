<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Philippe Aellig">
    <meta name="generator" content="Philippe Aellig">

    <meta property="og:title" content="{% block title %}Svitlo{% endblock %}" />
    <meta property="og:type" content="image/jpeg" />
    <meta property="og:url" content="{% block ogUrl %}{{ app.request.uri }}{% endblock %}" />
    <meta property="og:image" content="{% block ogImage %}{{ absolute_url(asset('build/images/svitlo.jpg') ) }}{% endblock %}" />

    <title>{{ block('title') }}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="col-lg-8 mx-auto p-4 py-md-5">
    <header class="d-flex align-items-center pb-3 mb-5 border-bottom">
        <a href="/" class="d-flex align-items-center text-body-emphasis text-decoration-none">
            <span class="fs-4">Svitlo</span>
        </a>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer class="pt-5 my-5 text-body-secondary border-top">
        {{ 'svitlo.is.a.nonprofit.and.private.application.created.by.Philippe.Aellig'|trans }} &middot; &copy; 2023
    </footer>
</div>
</body>
</html>